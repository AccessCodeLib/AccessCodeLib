Private Function GetFilterString(ByVal cbx As ComboBox) As String
   
   Dim FilterString As String
   Dim lngProjectID As Long
   Dim strProjectName As String
   
   If IsNull(cbx.Value) Then
      GetFilterString = vbNullString
      Exit Function
   End If
   
   lngProjectID = Nz(cbx.Column(0), 0)
   If cbx.LimitToList Then
      strProjectName = cbx.Column(1)
   Else
      strProjectName = cbx.Value
   End If
   
   FilterString = "ProjektName like '" & Replace(strProjectName, "'", "''") & "'"
   If lngProjectID <> 0 Then
      FilterString = FilterString & " AND idProjekt=" & lngProjectID
   End If
   
   GetFilterString = FilterString
   
End Function

